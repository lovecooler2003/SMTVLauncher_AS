<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/sm_15"
    android:paddingRight="@dimen/sm_15" >

    <TextView
        android:id="@+id/wifi_item_ssid_tv"
        android:layout_width="@dimen/sm_250"
        android:layout_height="@dimen/sm_45"
        android:ellipsize="marquee"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="AirPort"
        android:textColor="@color/white"
        android:textSize="@dimen/sm_20" />

    <TextView
        android:id="@+id/wifi_item_info_tv"
        android:layout_width="@dimen/sm_400"
        android:layout_height="@dimen/sm_45"
        android:layout_marginLeft="@dimen/sm_10"
        android:layout_toRightOf="@id/wifi_item_ssid_tv"
        android:ellipsize="marquee"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="通过WPA/WPA2进行保护"
        android:textColor="@color/white"
        android:textSize="@dimen/sm_20" />

    <ImageView
        android:id="@+id/wifi_item_signal_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/wifi_signal_o_0" />

</RelativeLayout>