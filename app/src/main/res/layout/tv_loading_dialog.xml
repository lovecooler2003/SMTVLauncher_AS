<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/sm_400"
    android:layout_height="@dimen/sm_200"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/iv_tv_loading"
        android:layout_width="@dimen/sm_180"
        android:layout_height="@dimen/sm_150"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="@dimen/sm_55"
        android:layout_marginLeft="@dimen/sm_10" />


    <TextView
        android:id="@+id/tv_tv_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/sm_40"
        android:ellipsize="marquee"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:textSize="@dimen/sm_12" />

</LinearLayout>